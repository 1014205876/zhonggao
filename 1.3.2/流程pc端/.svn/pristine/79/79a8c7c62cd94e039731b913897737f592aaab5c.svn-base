<div class="warnBox" *ngIf='isShow'>
  <div class='con'>
    <div class='header'>
      <span class='close' (click)='hide()'>&times;</span>
    </div>
    <div class='body'>
      <span>{{warning}}</span>
    </div>
    <div class='footer'>
      <button type="button" (click)='hide()'>确定</button>
    </div>
  </div>
</div>
<div class='mask' *ngIf='isShow'></div>