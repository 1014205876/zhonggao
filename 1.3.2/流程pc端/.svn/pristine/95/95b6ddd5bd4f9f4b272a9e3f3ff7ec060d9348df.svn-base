.login {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    min-height: 600px;
}
.loginBg {
    position: absolute;
    width: 100%;
    height: 100%;
    background: url(../../../assets/images/loginBg.jpg) center no-repeat;
    background-size: cover;
    z-index: 1;
}
.loginBgC {
    position: absolute;
    width: 100%;
    height: 100%;
    background: url(../../../assets/images/loginBgC.png) center no-repeat;
    background-size: cover;
    z-index: 3;
}
.stars {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
}
.login .bottomText {
    position: absolute;
    text-align: center;
    width: 100%;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: #666;
    bottom: 20px;
    z-index: 3;
}
.loginCon {
    width: 450px;
    height: 410px;
    position: absolute;
    margin: auto;
    top: 200px;
    left: 0;
    right: 0;
    z-index: 3;
}
.loginCon .title {
    color: #fff;
    text-align: center;
    font-size: 36px;
    height: 40px;
    line-height: 40px;
    font-family: 'PingFang SC Medium';
    margin-bottom: 30px;
}
.loginCon .box {
    background: #fff;
    border-radius: 10px;
    width: 100%;
    height: 325px;
    padding: 60px;
}
.loginCon form .item {
    width: 100%;
    height: 44px;
    border: 1px solid #e2e2e2;
    border-radius: 5px;
    padding: 0 40px;
}
.loginCon form .item input {
    display: block;
    width: 100%;
    height: 100%;
    font-size: 14px;
    color: #333;
    background: none;
}
.loginCon form .item input:-webkit-autofill {
    background-color: #fff;
    background-image: none;
}
.loginCon form .item input::-webkit-input-placeholder {
    color: #999;
}
.loginCon form .item input:-moz-placeholder {
    color: #999;
}
.loginCon form .name {
    background: url(../../../assets/images/loginUser.png) 12px center no-repeat;
    background-size: 16px;
    margin-bottom: 30px;
}
.loginCon form .pwd {
    background: url(../../../assets/images/loginPwd.png) 12px center no-repeat;
    background-size: 16px;
    position: relative;
}
.loginCon form .pwd .pwdTb {
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
    height: 100%;
    cursor: pointer;
    display: none;
}
.loginCon form .pwd .pwdTb1 {
    display: block;
    background: url(../../../assets/images/loginPwd3.png) 10px center no-repeat;
    background-size: 20px;
}
.loginCon form .pwd .pwdTb2 {
    display: block;
    background: url(../../../assets/images/loginPwd2.png) 10px center no-repeat;
    background-size: 20px;
}
.loginCon .rmbPwd {
    height: 44px;
    line-height: 60px;
}
.loginCon .rmbPwd span {
    margin-left: 5px;
    font-size: 12px;
}
.loginCon button.btn {
    width: 100%;
    height: 44px;
    background: #589af8;
    color: #fff;
    font-size: 14px;
    border-radius: 5px;
}

.mask{position: fixed;left: 0;top: 0;z-index: 9998; width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.3)}

.confirm{position: fixed; padding: 20px 0; z-index: 9999;width: 400px;background-color: #fff;border: 1px solid #999;left: 50%;top: 50%;transform: translate(-50%,-50%);border-radius: 4px;}
.header{height: 40px;line-height: 40px;text-align: center;font-size: 20px;color: #e64340;}
.body{line-height: 32px;padding: 20px;text-align: center;font-size: 14px;color: #333;}
.footer{text-align: center;padding: 5px 10px 5px 0;}
.footer button{font-size: 16px; height: 40px; border-radius: 5px; color: #fff;padding: 5px 0px;background-color: #589af8; width: 60%; margin: auto; }


