.btn {
  display: inline-block;
  height: 38px;
  line-height: 38px;
  padding: 0 20px;
  font-size: 14px;
  border-radius: 3px;
  margin: 0 12px;
}

.btn.sure {
  background-color: #589af8;
  color: #fff;
}

.btn.cal {
  background-color: #f26666;
  color: #fff;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3)
}

.confirm {
  position: fixed;
  padding: 20px 0;
  z-index: 9999;
  width: 400px;
  background-color: #fff;
  border: 1px solid #999;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 4px;
}

.confirm .head {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 20px;
  color: #e64340;
}

.confirm .body {
  line-height: 32px;
  padding: 20px;
  text-align: center;
  font-size: 14px;
  color: #333;
}

.confirm .footer {
  text-align: center;
  padding: 5px 10px 5px 0;
}

.confirm .footer button {
  display: inline-block;
  height: 38px;
  line-height: 38px;
  padding: 0 20px;
  font-size: 14px;
  border-radius: 3px;
  margin: 0 12px;
}

.btn.sure {
  background-color: #589af8;
  color: #fff;
}

.btn.cal {
  background-color: #f26666;
  color: #fff;
}


